[data-component='FullPeerView'] {
	width: 100%;
	height: 100%;
	z-index: 0;

	> video {
		position: relative;
		width: 100%;
		height: 100%;

		&.screensharing {
			object-fit: contain;
		}

		&:not(.screensharing) {
			object-fit: cover;
		}
	}

	> .hidden {
		display: none;
	}

	> .speaker-cam {
		position: absolute;
		top: 40vh;
		left: 1vh;
		width: 15vw;
		box-shadow: 0px 5px 12px 2px rgba(#111, 0.5);
		z-index: 10;

		> .speaker-handle {
			height: 32px;
			padding: 5px;
			width: 100%;
			background-color: rgba(#444, 0.6);
			user-select: none;
	
			> span {
				font-size: 18px;
				font-weight: 400;
				color: rgba(#fff, 0.85);
			}
		}

		> video {
			height: 100%;
			width: 100%;
			user-select: none;
			object-fit: cover;
			transition-property: opacity;
			transition-duration: .15s;
			background-color: rgba(#000, 0.75);
		}
	}
}
