[data-component='FilmStrip'] {
	position: fixed;
	display: flex;
	bottom: 0;
	left: 50%;
	transform: translate(-50%, 0);
	width: 75vw;
	height: 15vh;
	padding: 0px 0 0px 0;
	flex-direction: row;
	justify-content: center;
	align-items: flex-end;
	align-content: center;

	> .peer-container {
		z-index: 100;
		overflow: hidden;

		AppearFadeIn(1000ms);

		+desktop() {
			flex: 0 0 auto;
			margin: 6px;
			box-shadow: 0px 0px 12px 2px rgba(#111, 0.5);
			transition-property: box-shadow;
			transition-duration: 0.15s;

			&.active-speaker {
				box-shadow: 0px 0px 10px 5px rgba(yellow, 0.6);
			}

			&.video-spotlight {
				border: 3px solid rgba(orange, 0.65);
			}
		}
	}
}
